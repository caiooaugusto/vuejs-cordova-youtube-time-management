<?xml version='1.0' encoding='utf-8'?>
<widget id="com.youtubetimemanagement.test" version="0.0.1" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Task list</name>
    <description>
        YouTube Time Management
    </description>
    <author email="contato@bitwizard.net.br">
        Bit Wizard - Caio Augusto Peixer da Silva
    </author>
    <content src="index.html" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="file://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <preference name="android-minSdkVersion" value="16" />
        <preference name="orientation" value="portrait" />
        <preference name="SplashScreenDelay" value="4000" />
        <preference name="AndroidPersistentFileLocation" value="Compatibility" />
        <allow-intent href="market:*" />
        <icon density="ldpi" src="public/res/android/mipmap-ldpi/icon.png" />
        <icon density="mdpi" src="public/res/android/mipmap-mdpi/icon.png" />
        <icon density="hdpi" src="public/res/android/mipmap-hdpi/icon.png" />
        <icon density="xhdpi" src="public/res/android/mipmap-xhdpi/icon.png" />
        <icon density="xxhdpi" src="public/res/android/mipmap-xxhdpi/icon.png" />
        <icon density="xxxhdpi" src="public/res/android/mipmap-xxxhdpi/icon.png" />
        <splash density="port-ldpi" src="public/res/android/drawable-port-ldpi/screen.png" />
        <splash density="port-mdpi" src="public/res/android/drawable-port-mdpi/screen.png" />
        <splash density="port-hdpi" src="public/res/android/drawable-port-hdpi/screen.png" />
        <splash density="port-xhdpi" src="public/res/android/drawable-port-xhdpi/screen.png" />
        <splash density="port-xxhdpi" src="public/res/android/drawable-port-xxhdpi/screen.png" />
        <splash density="port-xxxhdpi" src="public/res/android/drawable-port-xxxhdpi/screen.png" />
    </platform>
    <icon src="public/res/android/mipmap-xxxhdpi/icon.png" />
    <preference name="loadUrlTimeoutValue" value="700000" />
    <preference name="AutoHideSplashScreen" value="true" />
    <preference name="SplashScreen" value="screen" />
    <plugin name="cordova-plugin-device" spec="^1.1.6" />
    <plugin name="cordova-plugin-whitelist" spec="^1.3.2" />
    <plugin name="cordova-plugin-file-transfer" spec="^1.6.3" />
    <plugin name="cordova-plugin-network-information" spec="^1.3.3" />
    <plugin name="cordova-plugin-splashscreen" spec="~4.0.3" />
    <plugin name="cordova-plugin-camera" spec="^2.4.1">
        <variable name="CAMERA_USAGE_DESCRIPTION" value="Tirar fotos das pescarias" />
        <variable name="PHOTOLIBRARY_USAGE_DESCRIPTION" value="Salvar as fotos das pescarias" />
    </plugin>
    <plugin name="cordova-plugin-crosswalk-webview" spec="^2.3.0">
        <variable name="XWALK_VERSION" value="23+" />
        <variable name="XWALK_LITEVERSION" value="xwalk_core_library_canary:17+" />
        <variable name="XWALK_COMMANDLINE" value="--disable-pull-to-refresh-effect" />
        <variable name="XWALK_MODE" value="embedded" />
        <variable name="XWALK_MULTIPLEAPK" value="true" />
    </plugin>
    <engine name="android" spec="^6.4.0" />
</widget>
